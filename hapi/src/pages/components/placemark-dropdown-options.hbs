<div class="dropdown is-hoverable">
    <div class="dropdown-trigger">
        <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
            <span>Add to Group</span>
            <span class="icon is-small">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
        </button>
    </div>
    <div class="dropdown-menu" id="dropdown-menu" role="menu">
        <div class="dropdown-content">
            {{#each groupsToAdd}}
                <form action="/dashboard/addPlacemarkToGroup" method="POST">
                    <div class="field">
                        <input class="input" type="hidden" name="groupId" value= {{id}}>
                    </div>
                    <div class="field">
                        <input class="input" type="hidden" name="placemarkId" value= {{../_id}}>
                    </div>
                    <div class="field">
                        <button class="is-link">{{title}}</button>
                    </div>
                </form>
            {{/each}}
        </div>
    </div>
</div>